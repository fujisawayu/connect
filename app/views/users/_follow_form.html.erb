<% unless current_user?(@user) %>
<div id="follow_form_<%= user.id %>" , class="actions">
  <% unless current_user.following?(user) %>
  <%= form_with(model: current_user.active_relationships.build(followed_id: user.id)) do |f| %>
  <%= f.hidden_field :followed_id %>
  <div style="text-align:center"><%= f.submit "フォロー", class: 'btn btn-primary follow' %></div>
  <% end %>
  <% else %>
  <%= form_with(model: current_user.active_relationships.find_by(followed_id: user.id), method: :delete ) do |f| %>
  <div style="text-align:center"><%= f.submit "フォロー解除", class: 'btn btn-warning follow' %></div>
  <% end %>
  <% end %>
  <% end %>
</div>